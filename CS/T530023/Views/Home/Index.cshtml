
@using (Html.BeginForm("UploadControlForm", "UploadControl", FormMethod.Post)) {
    @Html.DevExpress().UploadControl(settings => {
        settings.Name = "UploadControl";
        settings.CallbackRouteValues = new { Controller = "Home", Action = "UploadControlUpload" };
        settings.ShowUploadButton = true;
        settings.ShowProgressPanel = true;
        settings.UploadMode = UploadControlUploadMode.Standard;
        settings.ValidationSettings.Assign(T530023.Models.CustomUploadControlValidationSettings.Settings);
        settings.ClientSideEvents.FilesUploadComplete = "function(s, e) { CallbackPanel.PerformCallback( { path: e.callbackData }); }";
    }).GetHtml()
}

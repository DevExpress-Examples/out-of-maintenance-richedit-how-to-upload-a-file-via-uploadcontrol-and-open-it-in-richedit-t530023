@{
  var editor = Html.DevExpress().RichEdit(settings => {
      settings.Name = "RichEdit";
      settings.CallbackRouteValues = new { Controller = "Home", Action = "RichEditPartial" };
  });

  if (ViewData["path"] != null){
    editor.Open(Server.MapPath(ViewData["path"].ToString()));
  }
}

@editor.GetHtml()